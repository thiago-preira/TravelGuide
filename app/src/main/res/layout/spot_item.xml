<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_spot_name"
        style="@style/TextAppearance.TravelGuide.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="@string/select_place" />

    <TextView
        android:id="@+id/tv_spot_description"
        style="@style/TextAppearance.TravelGuide.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toStartOf="@id/iv_spot_directions"
        app:layout_constraintStart_toStartOf="@id/tv_spot_name"
        app:layout_constraintTop_toBottomOf="@id/tv_spot_name"
        tools:text="@string/mock_spot_description" />

    <ImageView
        android:id="@+id/iv_spot_directions"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_spot_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_spot_description"
        app:layout_constraintTop_toTopOf="@id/tv_spot_description"
        app:srcCompat="@drawable/ic_directions"
        android:contentDescription="@string/directions_description"/>
</android.support.constraint.ConstraintLayout>